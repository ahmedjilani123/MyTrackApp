 <core:FragmentDefinition
      xmlns:core="sap.ui.core" 
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:obj="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f">

    <!-- Dynamic Header Title -->
    <obj:ObjectPageDynamicHeaderTitle id="FormPage">
        <!-- Navigation Actions -->
        <obj:navigationActions>
            <OverflowToolbarButton
                type="Transparent"
                icon="sap-icon://decline"
                press="handleCloseSideScreenPre"
            
                tooltip="Close" />
        </obj:navigationActions>

        <!-- Title and Description -->
        <obj:expandedHeading>
            <VBox>
                <Title
                    text="{TempModel>/Title}"
                    level="H1" id="formTitleExIn"
                    wrapping="true"
                    class="sapUiSmallMarginBottom" />
                <Text
                    text="Add Data"
                    class="sapUiTinyMarginBottom"
                    wrapping="true" />
            </VBox>
        </obj:expandedHeading>

      
     
    </obj:ObjectPageDynamicHeaderTitle>
<form:SimpleForm >
<form:content>
<Label text="Amount" visible="{= ${TempModel>/Show} !== 'No' ? true : false}"></Label>
<Input type="Number" value="{TransactModel>/Amount}" placeholder="e.g â‚¹ 1,000" visible="{= ${TempModel>/Show} !== 'No' ? true : false}"></Input>
<Label text="Category" visible="{= ${TempModel>/Show} !== 'No' ? true : false}"></Label>
<Select items="{CatIncomM>/Categories}" forceSelection="false" selectedKey="{TransactModel>/Category}"  visible="{= ${TempModel>/Show} !== 'No' ? true : false}">
<core:Item text="{CatIncomM>CategoryName}" key="{CatIncomM>CategoryName}"></core:Item>
</Select> 
<Label text="Business Partner" visible="{= ${TempModel>/Show} === 'In' ? true : false}"></Label>
<Select items="{CatIncomM>/Incomes}" forceSelection="false" selectedKey="{TransactModel>/BusinessPartner}" visible="{= ${TempModel>/Show} === 'In' ? true : false}">
<core:Item text="{CatIncomM>JobTitle}" key="{CatIncomM>JobTitle}"></core:Item>
</Select>
<Label text="Title"></Label>
<Input type="Text" placeholder="e.g Salary" value="{TransactModel>/Title}"></Input>
<Label text="Description"></Label>
<TextArea rows="2" value="{TransactModel>/Description}" placeholder="Enter few words"></TextArea>
</form:content>
</form:SimpleForm>


 </core:FragmentDefinition>