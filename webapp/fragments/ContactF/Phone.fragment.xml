<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
<Dialog title="Add Contact Details">
<content>
<form:SimpleForm >
<form:content>
<Label text="Avatar Select"></Label>
<Select >
<core:Item text="sap-icon://account"></core:Item>
</Select>
<Label text="Name"></Label>
<Input ></Input>
<Label text="Designation"></Label>
<Input type="Text"></Input>
<Label text="Email"></Label>
<Input type="Email"></Input>
<Label text="Phone"></Label>
<Input type="Number"></Input>
<Label text="Message"></Label>
<TextArea rows="2"></TextArea>
</form:content>
</form:SimpleForm>
</content>
<beginButton>
<Button text="Close" press="ClosePhoneDialogH"></Button>
</beginButton>
<endButton>
<Button text="Save" type="Emphasized"></Button>
</endButton>
</Dialog>
</core:FragmentDefinition>