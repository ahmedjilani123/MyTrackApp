<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<Popover
		id="groupPopover"
		showHeader="false"
		contentWidth="450px"
		contentHeight="600px"
		placement="Bottom">
		<NavContainer
			id="navContact">
			<Page
				id="main"
				titleAlignment="Center"
				title="Partner Numbers ({ContactM>/length})" >
				<l:VerticalLayout class="sapUiTinyMarginTop" width="100%">
					<l:Grid defaultSpan="XL6 L6 M6 S12" content="{path: 'ContactM>/'}">
						<HBox alignItems="Center">
							<VBox>
								<Avatar class="sapUiTinyMarginEnd"
										backgroundColor="Random"
										initials="{ContactM>Avatar}"
										
										press="onAvatarPressContact"/>
							</VBox>
							<VBox>
								<Text text="{ContactM>Name}"/>
								<Text text="{ContactM>Designation}"/>
							</VBox>
						</HBox>
					</l:Grid>
				</l:VerticalLayout>
			</Page>
			<Page
				id="detailContact"
				showNavButton="true"
				navButtonPress="onNavBackContact"
				titleAlignment="Center" showFooter="true"
				title="Business Partner Number" >
				<core:Fragment fragmentName="aj.sap.myexpenseapp.fragments.ContactF.InformaContact" type="XML"> </core:Fragment>
                	<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button
					
					text="Edit"
					press=".handleEmailPress" />
			</OverflowToolbar>
		</footer>
			</Page>
		</NavContainer>
	</Popover>
</core:FragmentDefinition>