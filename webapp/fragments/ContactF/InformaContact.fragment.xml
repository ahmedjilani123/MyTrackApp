<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout">
	<f:Card>
		<f:content>
			<l:VerticalLayout class="sapUiContentPadding">
				<HBox alignItems="Center">
					<Avatar src="{ContactM>Avatar}"
							initials="{ContactM>/Avatar}"
							 />
					<VBox class="sapUiTinyMarginBegin">
						<Title text="{ContactM>Name}" />
						<Text text="{ContactM>Designation}" />
					</VBox>
				</HBox>
				<Title text="Contact Details"/>
				<Label text="Mobile" />
				<Text text="{ContactM>Phone}" />
				<Label text="Email" />
				<Text text="{ContactM>Email}" />
                <Label text="Message" />
				<Text text="{ContactM>Message}" />
			</l:VerticalLayout>
		</f:content>
	</f:Card>
</core:FragmentDefinition>