<core:FragmentDefinition xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns="sap.m" xmlns:core="sap.ui.core">
<Dialog title="Edit Your Wonderful Profile"  draggable="true" resizable="true" class="sapUiResponsiveContentPadding">
<content>

<form:SimpleForm layout="ColumnLayout"  >
<form:content>
<Label text="Job Title"></Label>
<Input value="{TempUserModel>/JobTitle}"></Input>
<Label text="Organization Name"></Label>
<Input value="{TempUserModel>/Organization}"></Input>
<Label text="Expertise Area"></Label>
<Input value="{TempUserModel>/ExpertiseArea}"></Input>
<Label text="Experience"></Label>
<Input type="Number" value="{TempUserModel>/Experience}"></Input>
<Label text="Location"></Label>
<Input value="{TempUserModel>/Location}"></Input>
<Label text="Payer Name"></Label>
<Input type="Text" value="{TempUserModel>/PayerName}"></Input>
<Label text="Primary Income"></Label>
<Input type="Number" value="{TempUserModel>/Salary}"></Input>

</form:content>
</form:SimpleForm>
</content>
<beginButton>
<Button text="Close" press="CloseEditProfileResourceHandler"></Button>
</beginButton>
<endButton>
<Button text="Save"></Button>
</endButton>
</Dialog>
</core:FragmentDefinition>