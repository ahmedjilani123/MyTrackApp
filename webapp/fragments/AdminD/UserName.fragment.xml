<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
<Dialog title="Edit User Details">
<content>
<form:SimpleForm >
<form:content>
<Label text="Name"></Label>
<Input ></Input>
<Label text="Email"></Label>
<Input ></Input>
<Label text="Password"></Label>
<VBox >
<Input type="Password"></Input>
<core:Icon src="sap-icon://message-information" press="PasswordInformationPress" color="#925FE2" class="sapUiTinyMarginTop" ></core:Icon>
</VBox>

<Label text="Confirm Password"></Label>
<Input type="Password"></Input>
<Label text="Show/Hide Password"></Label>
<Switch state="true" type="Default" ></Switch>
<Label text="Description"></Label>
<TextArea rows="2"></TextArea>
</form:content>
</form:SimpleForm>
</content>
<beginButton>
<Button text="Close" press="CloseCategoryYearPress"></Button>
</beginButton>
<endButton>
<Button text="Save" ></Button>
</endButton>
</Dialog>
</core:FragmentDefinition>