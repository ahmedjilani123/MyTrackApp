<core:FragmentDefinition xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns="sap.m">
<Dialog title="Edit Category Details">
<content>
<form:SimpleForm >
<form:content>
<Label text="Category Name"></Label>
<Input value="{EditCategoryM>/CategoryName}"></Input>
<Label text="Type"></Label>
<Label text="Category Description"></Label>
<Input value="{EditCategoryM>/Description}"></Input>
<Select selectedKey="{EditCategoryM>/CategoryType}">
<core:Item text="Income" key="Income"></core:Item>
<core:Item text="Expense" key="Expense"></core:Item>

</Select>
</form:content>
</form:SimpleForm>
</content>
<beginButton>
<Button text="Close" press="CloseCategoryYearPress"></Button>
</beginButton>
<endButton>
<Button text="Save" press="onSaveEditCategoryHandler"></Button>
</endButton>
</Dialog>
</core:FragmentDefinition>