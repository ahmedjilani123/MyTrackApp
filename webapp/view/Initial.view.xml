<mvc:View xmlns:layout="sap.ui.layout" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="aj.sap.myexpenseapp.controller.Initial"
    xmlns:mvc="sap.ui.core.mvc" xmlns:My="aj.sap.myexpenseapp.utils"
    xmlns="sap.m">
    <Page id="pageLoginID" class="sapUiContentPadding MainLoginPage" title="{i18n>title}" showHeader="false"> 
    <FlexBox direction="Column" alignItems="Center" justifyContent="Center" height="100%">
    <core:Icon src="sap-icon://cart-2" class="sapUiLargeMarginBottom" color="white"  size="3.25rem"></core:Icon>

  <My:MyInput   placeholder="Email" value="{LoginInfoM>/Email}" liveChange="submit" width="200px" height="1.30rem" />
  <My:MyInput  type="Password"  placeholder="Password" value="{LoginInfoM>/Password}" liveChange="submit" width="200px" height="1.30rem" />
   
   <My:MyButton text="LOGIN" width="13.55rem" height="1.80rem" press="loginHandler"/>

  <Link text="Forgot Password?" textAlign="Left"  class="forgotPassText sapUiTinyMarginTop"/>
  
    </FlexBox>
   
    </Page>
</mvc:View>