<mvc:View xmlns:feeds="sap.viz.ui5.controls.common.feeds" xmlns:data="sap.viz.ui5.data" xmlns:controls="sap.viz.ui5.controls" xmlns:commons="sap.suite.ui.commons" xmlns:cssgrid="sap.ui.layout.cssgrid" xmlns:layout="sap.ui.layout" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:core="sap.ui.core" controllerName="aj.sap.myexpenseapp.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" xmlns:My="aj.sap.myexpenseapp.utils"
    xmlns="sap.m">
    <Page id="Home" title="{i18n>title}" class="sapUiResponsiveContentPadding" showHeader="false"> 
   <f:Card class="HeaderCardCss">
   <f:content>
   <HBox  justifyContent="SpaceBetween" alignItems="Center" alignContent="Center" width="100%">
   <VBox class="sapUiSmallMargin">
   <Text text="October 7 2025" class="TextClassHeader sapUiSmallMarginBottom" ></Text>
   <Title text="Welcome Back ! Ahmed Shaikh" level="H3" titleStyle="H3" class="TextClassHeader"></Title>
   <Text text="Always Stay updated in your _ portal" class="TextClassHeader"></Text>
   </VBox>
   <Image src="./../images/Headerimage.png"></Image>
   </HBox>
   </f:content>
   </f:Card>

<layout:VerticalLayout width="100%" >
<layout:BlockLayout >
<layout:BlockLayoutRow >
<layout:BlockLayoutCell width="3" >
 
 <HBox justifyContent="SpaceBetween" alignItems="Center">
   <Title text="Finance ( 2025 )" ></Title>
     <Link text="See Years" emphasized="true" press="onOpenPopoverYear"/>
    </HBox>
<f:GridList itemPress="ClickTilePress" >
<f:customLayout>
<cssgrid:GridBoxLayout ></cssgrid:GridBoxLayout>
</f:customLayout>
<f:GridListItem highlight="Information" type="Active" >
<VBox width="100%" justifyContent="Center" alignItems="Center" alignContent="Center">
	
<Image src="./../images/Imcome.png" width="3rem"  height="2.25rem"  class="sapUiMediumMarginTop"/>
<Title text="$10000"></Title>
<Label text="Total Payable" ></Label>
</VBox>
</f:GridListItem>
<f:GridListItem  type="Active" highlight="Error">
<VBox width="100%" justifyContent="Center" alignItems="Center" alignContent="Center">
	
<Image src="./../images/OutPut.png" width="3rem"  height="2.25rem"  class="sapUiSmallMarginBeginEnd sapUiMediumMarginTop"/>
<Title text="$10000"></Title>
<Label text="Total Payable" class="sapUiMediumMarginBottom"></Label>
</VBox>
</f:GridListItem>
<f:GridListItem type="Active" highlight="Warning">
<VBox width="100%" justifyContent="Center" alignItems="Center" alignContent="Center">
	
<Image src="./../images/OtherIncome.png" width="3rem"  height="2.25rem" class="sapUiSmallMarginBeginEnd sapUiMediumMarginTop"/>
<Title text="$10000"></Title>
<Label text="Total Payable" class="sapUiMediumMarginBottom"></Label>
</VBox>
</f:GridListItem>
</f:GridList>
<Title text="Monthly Salary Chart" class="sapUiTinyMarginTopBottom"></Title>
<f:Card height="auto">
<f:content>
<commons:ChartContainer  width="100%" id="firstPlantC_Id" showFullScreen="true" showLegendButton="false" showLegend="true" showZoom="false">
<commons:dimensionSelectors>
<Select >
<core:Item text="2025"></core:Item>
<core:Item text="2024"></core:Item>
<core:Item text="2023"></core:Item>
</Select>
</commons:dimensionSelectors>
<commons:content>
<commons:ChartContainerContent >
<commons:content>
<controls:VizFrame height="230px" vizType="column" id="VizFrameID">
<controls:dataset >
<data:FlattenedDataset data="{SalaryM>/}">
<data:dimensions>
  <data:DimensionDefinition name="Month Name" value="{SalaryM>MonthName}"></data:DimensionDefinition>
</data:dimensions>
<data:measures>
    <data:MeasureDefinition name="Amount" value="{SalaryM>CollAmount}"></data:MeasureDefinition>
                                                
</data:measures>
</data:FlattenedDataset>
</controls:dataset>
<controls:feeds>
  <feeds:FeedItem values="Amount" uid="valueAxis" type="Measure"></feeds:FeedItem>
<feeds:FeedItem values="Month Name" uid="categoryAxis" type="Dimension"></feeds:FeedItem>
</controls:feeds>
</controls:VizFrame>
</commons:content>
</commons:ChartContainerContent>
</commons:content>
</commons:ChartContainer>
</f:content>
</f:Card>


</layout:BlockLayoutCell>
<layout:BlockLayoutCell>
    <HBox justifyContent="SpaceBetween" alignItems="Center">
    <Title text="Friends Number" class="sapUiTinyMarginTopBottom"></Title>
     <Link text="Add" emphasized="true" press="AddContactHandler"/>
    </HBox>

  <f:AvatarGroup 	groupType="Individual"
					avatarDisplaySize="S" 
					press="onIndividualPress" items="{ContactM>/}">
    
    <f:AvatarGroupItem initials="{ContactM>Avatar}"  />
  
    </f:AvatarGroup>
    <HBox justifyContent="SpaceBetween" alignItems="Center">
     <Title text="Daily Notice" class="sapUiTinyMarginTopBottom" />

      <Link text="See all" emphasized="true" press="SeeAllNoticeHandler"/>
    </HBox>
   
       
        <NotificationListGroup press="NoticeHandlerPress" selected="true" showCloseButton="false" autoPriority="false" title="Notice">
      
				<NotificationListItem
					title="New Policy Update"
					description="All employees must review the updated data protection policy shared via email."
					showCloseButton="false"
					datetime="1 hour"
          type="Active"
					unread="true"
					priority="None"
          showButtons="false" 
					close=".onItemClose"
					press=".onListItemPress"
					authorPicture="sap-icon://car-rental"
					authorAvatarColor="Accent8" />  </NotificationListGroup>
      
</layout:BlockLayoutCell>
</layout:BlockLayoutRow>
</layout:BlockLayout>
</layout:VerticalLayout>

 
    </Page>
</mvc:View>