<mvc:View xmlns:core="sap.ui.core" xmlns:form="sap.ui.layout.form" controllerName="aj.sap.myexpenseapp.controller.AdminSec"
    displayBlock="true" xmlns:f="sap.f"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
  <Page id="AdminSec" title="Track Management" >
  	<content>
			<f:SidePanel id="mySidePanel"  sidePanelResizable="true" toggle="onToggle">
				<f:mainContent>
				<Panel headerText="Category">
  
  <Table >
  <items>
  <ColumnListItem >
  <cells>
  <Text text="Salary"></Text>
  <Text text="Income"></Text>
  <HBox justifyContent="Center" alignItems="Center">
  <Button icon="sap-icon://edit" type="Attention"></Button>
  <Button icon="sap-icon://delete" type="Reject" class="sapUiTinyMarginBegin"></Button>
  </HBox>
  </cells>
  </ColumnListItem>
  </items>
  <columns>
  <Column hAlign="Center" importance="High">
  <header>
  <Label text="Category"></Label>
  </header>
  </Column>
    <Column hAlign="Center"   demandPopin="true" 	minScreenWidth="Tablet" >
  <header>
  <Label text="Type(Income/Expense)"></Label>
  </header>
  </Column>
    <Column hAlign="Center">
  <header>
  <Label text="Actions"></Label>
  </header>
  </Column>
  </columns>
  </Table>
  </Panel>
   <Panel headerText="User Mamage" class="sapUiSmallMarginTop">
 
  <Table >
  <items>
  </items>
  <columns>
  <Column hAlign="Center">
  <header>
  <Label text="Name"></Label>
  </header>
  </Column>
    <Column hAlign="Center">
  <header>
  <Label text="Role"></Label>
  </header>
  </Column>
    <Column hAlign="Center">
  <header>
  <Label text="Status"></Label>
  </header>
  </Column>
     <Column hAlign="Center">
  <header>
  <Label text="Actions"></Label>
  </header>
  </Column>
  </columns>
  </Table>
  </Panel>
   <Panel headerText="Application" class="sapUiSmallMarginTop">
  <headerToolbar>
  <OverflowToolbar >
    <Title text="Application Settings"></Title>
 

  </OverflowToolbar>
  </headerToolbar>
 
  </Panel>
				</f:mainContent>
				<f:items>
					<f:SidePanelItem icon="sap-icon://add" text="Add Category">
					<form:SimpleForm >
                    <form:content>
                    <Label text="Category Name"></Label>
                    <Input ></Input>
                    <Label text="Category Type"></Label>
                    <Select >
                    <core:Item text="Income"></core:Item>
                       <core:Item text="Expense"></core:Item>
                          <core:Item text="Invest"></core:Item>
                    </Select>
                    <Button text="Save"></Button>
                    </form:content>
                    </form:SimpleForm>
					</f:SidePanelItem>
					<f:SidePanelItem icon="sap-icon://person-placeholder" text="Add User">
					<form:SimpleForm >
                    <form:content>
                    <Label text="User Name"></Label>
                    <Input ></Input>
                    <Label text="User Email"></Label>
                 <Input ></Input>
                 <Label text="Gender"></Label>
                 <Select >
                 <core:Item text="Male"></core:Item>
                 <core:Item text="Female"></core:Item>
                 </Select>
                 <Label text="Password"></Label>
                 <Input type="Password"></Input>
                    <Button text="Save"></Button>
                    </form:content>
                    </form:SimpleForm>
					</f:SidePanelItem>
				
				</f:items>
			</f:SidePanel>
		</content>
  
  </Page>
</mvc:View>