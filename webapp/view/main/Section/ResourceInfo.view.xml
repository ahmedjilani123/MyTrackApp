
<mvc:View  controllerName="aj.sap.myexpenseapp.controller.ResourceInfo"
      xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:obj="sap.uxap"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:cards="sap.f.cards"
    xmlns:f="sap.f" id="BasicInfo"> 
    <obj:ObjectPageLayout showFooter="true"
        showTitleInHeaderContent="true"
        showEditHeaderButton="true"
        editHeaderButtonPress="handleEditBtnPress"
        upperCaseAnchorBar="false"
    >
        <obj:headerTitle>
            <obj:ObjectPageDynamicHeaderTitle backgroundDesign="Translucent">
                <obj:expandedHeading>
                    <HBox>
                        <Title
                            text="{UserDataM>/FullName}"
                            wrapping="true"
                        />
                        <ObjectMarker
                            type="Favorite"
                            class="sapUiTinyMarginBegin"
                        />
                    </HBox>
                </obj:expandedHeading>

                <obj:snappedHeading>
                    <FlexBox
                        fitContainer="true"
                        alignItems="Center"
                    >
                        <Avatar
                            src="./.{UserDataM>/AvatarImage}"
                            class="sapUiTinyMarginEnd" active="true" press="AvatarPress"
                        />
                        <Title
                            text="{UserDataM>/FullName}"
                            wrapping="true"
                        />
                    </FlexBox>
                </obj:snappedHeading>

                <obj:expandedContent>
                    <Text text="{UserDataM>/Designation}" />
                </obj:expandedContent>

                <obj:snappedContent>
                    <Text text="{UserDataM>/Designation}" />
                </obj:snappedContent>

                <obj:snappedTitleOnMobile>
                    <Title text="{UserDataM>/Designation}" />
                </obj:snappedTitleOnMobile>

                <obj:actions>
                    <Button text="Edit Profile" fieldGroupIds="{UserDataM>/Email}" press="EditProfileHandler"
                       icon="sap-icon://user-edit"
                    />
                   
                  
                </obj:actions>
            </obj:ObjectPageDynamicHeaderTitle>
        </obj:headerTitle>

        <obj:headerContent>
            <FlexBox wrap="Wrap">
                <Avatar
                    class="sapUiSmallMarginEnd"
                    src="./.{UserDataM>/AvatarImage}"
                    displaySize="L" active="true" showBorder="true" press="AvatarPress"
                />
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <Text
                        text="{UserDataM>/HeaderTitle}"
                        wrapping="true"
                    />
                   <Text text="asdfasdfasjdfl asfj slfj aflaj flsdf sldf asf sdf"></Text>
                    <VBox>
                        <Label text="{UserDataM>/Skills}" />
                        <ProgressIndicator
                            percentValue="{UserDataM>/PercentValue}"
                            displayValue="{UserDataM>/DisplayValue}"
                            state="Success"
                        />
                    </VBox>
                </layout:VerticalLayout>

                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <layout:VerticalLayout>
                        <ObjectStatus
                            icon="sap-icon://da"
                            title="Skills"
                            text="{UserDataM>/Skills}"
                        />
                        <ObjectStatus
                            title="Country"
                            text="{UserDataM>/Country}"
                        />
                        <ObjectStatus
                            title="Language"
                            text="{UserDataM>/Language}"
                        />
                        <ObjectStatus
                            icon="sap-icon://call"
                            title="Mobile Number"
                            text="{UserDataM>/Mobile}"
                        />
                    </layout:VerticalLayout>
                </layout:VerticalLayout>
                <layout:VerticalLayout class="sapUiSmallMarginBeginEnd">
                    <layout:VerticalLayout>
                        <ObjectStatus
                            icon="sap-icon://end-user-experience-monitoring"
                            title="Experience"
                            text="{UserDataM>/Experience} Years"
                        />
                        <ObjectStatus
                            icon="sap-icon://study-leave"
                            title="Qualification"
                            text="{UserDataM>/Qualification}"
                        />
                        <ObjectStatus
                            icon="sap-icon://email"
                            title="Email"
                            text="{UserDataM>/Email}"
                        />
                    </layout:VerticalLayout>
                </layout:VerticalLayout>
            </FlexBox>
        </obj:headerContent>

        <obj:sections>
            <obj:ObjectPageSection
                titleUppercase="false"
                title="Objective"
            >
                <obj:ObjectPageSubSection
                    title="Objective"
                    titleUppercase="false"
                >
                    <Text
                        text="{UserDataM>/Objective}"
                    />
                </obj:ObjectPageSubSection>
            </obj:ObjectPageSection>
         
         <obj:ObjectPageSection
                titleUppercase="false"
                title="Income Resource Details"
            >
                <obj:ObjectPageSubSection
                    title="Income Resource Details"
                    titleUppercase="false"
                >
                  <Table mode="SingleSelectLeft" id="IncomeResourceTableID" items="{ResourceM>/}">
  <items>
  <ColumnListItem >
  <cells>
  <Text text="{ResourceM>JobTitle}"></Text>
  <Text text="{ResourceM>Organization}"></Text>
<Text text="{ResourceM>ExpertiseArea}"></Text>
  <Text text="{ResourceM>Experience}"></Text>
  <Text text="{ResourceM>PayerName}"></Text>
  
  <ObjectStatus text="â‚¹ {ResourceM>Salary}" state="Success"></ObjectStatus>
  </cells>
  </ColumnListItem>
  </items>
  <columns>
    <Column hAlign="Begin" importance="High">
  <header>
  <Label text="Job Title"></Label>
  </header>
  </Column>
    <Column hAlign="Begin"  importance="High"  >
  <header>
  <Label text="Organization Name"></Label>
  </header>
  </Column>
    <Column hAlign="Begin"  demandPopin="true" 	minScreenWidth="Tablet">
  <header>
  <Label text="Expertise Area"></Label>
  </header>
  </Column>
   <Column hAlign="Center"  demandPopin="true" 	minScreenWidth="Tablet">
  <header>
  <Label text="Experience"></Label>
  </header>
  </Column>
  
   <Column hAlign="Begin"  demandPopin="true" 	minScreenWidth="Tablet">
  <header>
  <Label text="Payer Name"></Label>
  </header>
  </Column>
  <Column hAlign="Center" importance="Medium"  demandPopin="true" 	minScreenWidth="Tablet">
  <header>
  <Label text="Primary Income"></Label>
  </header>
  </Column>
  
  </columns>
  </Table>
                </obj:ObjectPageSubSection>
            </obj:ObjectPageSection>
         
    
        </obj:sections>
        <obj:footer>
        <OverflowToolbar >
        <ToolbarSpacer ></ToolbarSpacer>
        <Button text="Delete" type="Reject" icon="sap-icon://sys-cancel" press="DeleteResourceHandler"></Button>
        <Button text="Edit" type="Attention" icon="sap-icon://developer-settings" press="EditResourceHandler"></Button>
          <Button text="Add Resource" type="Ghost" press="AddResourceHandler"
                       icon="sap-icon://cart-4"
                    />
        </OverflowToolbar>
        </obj:footer>
    </obj:ObjectPageLayout>
    
</mvc:View>